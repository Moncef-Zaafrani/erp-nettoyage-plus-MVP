import {
  Entity,
  PrimaryGeneratedColumn,
  Column,
  ManyToOne,
  CreateDateColumn,
  JoinColumn,
} from 'typeorm';
import { Attendance } from './attendance.entity';

export enum BreakType {
  MANUAL = 'MANUAL',      // User clicked "Take a Break"
  IDLE = 'IDLE',          // Auto-pause due to idle detection
  SYSTEM = 'SYSTEM',      // System-triggered (e.g., network issue)
}

@Entity('shift_breaks')
export class ShiftBreak {
  @PrimaryGeneratedColumn('uuid')
  id: string;

  @Column({ type: 'uuid' })
  attendanceId: string;

  @ManyToOne(() => Attendance, { onDelete: 'CASCADE' })
  @JoinColumn({ name: 'attendanceId' })
  attendance: Attendance;

  @Column({ type: 'timestamp' })
  breakStart: Date;

  @Column({ type: 'timestamp', nullable: true })
  breakEnd: Date;

  @Column({ type: 'int', nullable: true })
  durationMinutes: number;

  @Column({
    type: 'enum',
    enum: BreakType,
    default: BreakType.MANUAL,
  })
  breakType: BreakType;

  @Column({ type: 'varchar', length: 255, nullable: true })
  notes: string;

  @CreateDateColumn()
  createdAt: Date;
}
